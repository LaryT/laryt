<script>

  var prefs = new gadgets.Prefs();
  var myURLfeed1= prefs.getString("my_URLfeed_1");

  var myTab1= prefs.getString("my_Tab_1");
  var myTab2= prefs.getString("my_Tab_2");
  var myTab3= prefs.getString("my_Tab_3");

  var query1;
  var poiaSeiraItem=0;

  var msgTxt="<span style='font-size:9px;'>Δεν υπάρχει το αντίστοιχο URL του πηγαίου αρχείου.  Για να ξεπερασθεί το πρόβλημα, παρακαλούμε από την επιλογή επεξεργασία των παραμέτρων, εισάγεται την αντίστοιη URL διεύθυνση του πηγαίου αρχείου των πληροφοριών [πληροφορίες για την δομή του αρχείου: grbasket@gmail.com] |..|<br/><br/> There is no corresponding URL (source file). Please edit the parameters, enter the URL file address, with the infos categories ... [more for the file structure: terzisla@gmail.com]</span>";

//---------------------------
//---- make query tab 1 (old bathmologia)
//---------------------------
function sendQueryMakeItems() {
    query1.setQuery('select * order  by A, B');
    query1.send(handleQueryResponseMakeItems);
}

//---------------------------
//---- ResponseMakaeItems
//---------------------------
function handleQueryResponseMakeItems(response) {
   if (response.isError()) {
    alert('Error in query_members: ' + response.getMessage() + ' ' + response.getDetailedMessage());
    return;
  }
//---  GET THE DATA 

 var html =[];  
 var data = response.getDataTable();

 var posesEggrafes = data.getNumberOfRows();
 
 html.push('<div id="perioxh_1_ID" >');

 for (var row = 0; row < 12; row++) {

   if(row != 0) {
     html.push('<div id="it_1_'+row+'" class="imantasDataItem" style="display: none;height:316px;">');
   } else{
     html.push('<div id="it_1_'+row+'" class="imantasDataItem" style="height:316px;">');
   }
   

   html.push('<div class="imantasImgContainer">');
   
   if( data.getFormattedValue(row, 8)!=""  ) {
        html.push('<iframe class="boxKampylesPano" allowfullscreen="" frameborder="0" src="http://www.youtube.com/embed/'+data.getFormattedValue(row, 8)+'?rel=0&autohide=1&showinfo=0" style="height:240px;width:585px;border-width:0px;margin:5px 7px;"></iframe>');

   }else{
         html.push('<img class="boxKampylesPano" src="'+data.getFormattedValue(row, 2) +'" alt="'+data.getFormattedValue(row, 4)+'" style="height:316px;width:599px;border-width:0px;">');
   }

   if( data.getFormattedValue(row, 8) !=""  ) {
   }else{
     if( data.getFormattedValue(row, 9) !=""  ) {
        html.push('<div id="imantasDataMarquee" class="imantasDataMarquee"><marquee>'+ data.getFormattedValue(row, 9)+'</marquee></div> '); 
      }
     html.push('<div id="imantasDataCategoryTop" class="imantasDataCategoryTop">'+ data.getFormattedValue(row, 6)+'</div> '); 
   }
   html.push('</div>');


   html.push('<div class="imantasDataContainer">');
   html.push('<h3 class="imantasEpikefalides">');
   html.push(' <a class="imantasTilosMegalosLink" target="_top" href="'+data.getFormattedValue(row, 7)+'">'+ data.getFormattedValue(row, 4)+'</a> ');
   html.push('</h3>');
   html.push('<div id="imantasYpotitloi" class="imantasYpotitloi">'+data.getFormattedValue(row, 5)+'</div> ');                 
   
  html.push('</div>');


 html.push('</div>');  //---- end me imantas data, img, titles

 if(row < 4) {
    if(row > 0) {
      html.push('<div id="indx_1_'+row+'" class="myNaviContainer1"> ');
    } else{
      html.push('<div id="indx_1_'+row+'" class="myNaviContainer1 f_indexSelected"> ');
    }
  }else{
     html.push('<div id="indx_1_'+row+'" class="myNaviContainer1" style="display: none;"> ');
  }
  

   html.push('<a href="'+ data.getFormattedValue(row, 7)  +'" class="tip" onclick="javascript:SelectItem(&quot;#perioxh_1_ID&quot;,&quot;#indx_1_'+row+'&quot;,&quot;#it_1_'+row+'&quot; );return false;">');
   html.push('<span>'+ data.getFormattedValue(row, 4) +'</span>');
   
   if( data.getFormattedValue(row, 8)!=""  ) {
         html.push('<img src="http://i1.ytimg.com/vi/' + data.getFormattedValue(row, 8) +'/1.jpg" alt="" style="height:50px;width:118px;border-width:0px;">');
   } else{
      html.push('<img src="' + data.getFormattedValue(row, 2) +'" alt=""  style="height:50px;width:118px;border-width:0px;">');
   }

   html.push('</a>');
   html.push('</div>');
 } //-- end for

  html.push('</div>');
  
  
  document.getElementById("panoXorosItems").innerHTML = html.join('');
}


//--------------------------------------
function SelectItem (container, selected, selectedItem) {

    $(container+" div").removeClass("f_indexSelected");
    $(".imantasDataItem").hide();
//--- gia to item
    $(selectedItem).show();
    $(selected).addClass("f_indexSelected");
}

//-----------------
// --- gia ta tabs
//-----------------
function selectTab (myID, myTab, myCaption ) {

    $("#myTabs a").removeClass("tab-selected");
//--- gia perioxh
    $("#"+myID).show();
//--- gia to tab
    $("#"+myTab).addClass("tab-selected");

//---

  if(myTab == "proto-tab"){  
    // -----   click tab 1
    poiaSeiraItem=0;
    $(".imantasDataItem").hide();
    $(".myNaviContainer1").hide();
    $("#it_1_0").show();
    $("#indx_1_0").show();
    $("#it_1_1").show();
    $("#indx_1_1").show();    
    $("#it_1_2").show();
    $("#indx_1_2").show();  
    $("#it_1_3").show();
    $("#indx_1_3").show();  
    
    SelectItem("#perioxh_1_ID","#indx_1_0","#it_1_0" );
    $("#indx_1_0").addClass("f_indexSelected");
    
  }

  if( myTab == "deytero-tab" ){
      poiaSeiraItem=1;
    $(".imantasDataItem").hide();
    $(".myNaviContainer1").hide();
    $("#it_1_4").show();
    $("#indx_1_4").show();
    $("#it_1_5").show();
    $("#indx_1_5").show();    
    $("#it_1_6").show();
    $("#indx_1_6").show();  
    $("#it_1_7").show();
    $("#indx_1_7").show(); 
    SelectItem("#perioxh_1_ID","#indx_1_4","#it_1_4" );
    $("#indx_1_4").addClass("f_indexSelected");    
  }

  if(myTab == "trito-tab"){  
      poiaSeiraItem=2;
    $(".imantasDataItem").hide();
    $(".myNaviContainer1").hide();
    $("#it_1_8").show();
    $("#indx_1_8").show();
    $("#it_1_9").show();
    $("#indx_1_9").show();    
    $("#it_1_10").show();
    $("#indx_1_10").show();  
    $("#it_1_11").show();
    $("#indx_1_11").show();
    SelectItem("#perioxh_1_ID","#indx_1_8","#it_1_8" );    
    $("#indx_1_8").addClass("f_indexSelected");    
  }
  
  sendQueryMakeItems();
}


function init(){
  makeTabs();
  if( myURLfeed1 !="" ){
    query1 = new google.visualization.Query(myURLfeed1);
    sendQueryMakeItems();
  }else{
    document.getElementById("perioxh_1_ID").innerHTML = msgTxt;
  }
    $("#proto-tab").addClass("tab-selected");
}
//--- make Tabs
function makeTabs(){
 var tabsHtml =[];

 if( myTab1 !="" ){
    tabsHtml.push('<a id="proto-tab" href="javascript:void(0);"   onclick="javascript:selectTab(&quot;sourceIDBathm&quot;,&quot;proto-tab&quot;,&quot;'+ myTab1+'&quot;);return false;">'+ myTab1+ '</a>' );
   }else{
    tabsHtml.push('<a id="proto-tab" href="javascript:void(0);" onclick="javascript:selectTab(&quot;sourceIDBathm&quot;,&quot;proto-tab&quot;,&quot;myTab1&quot;);return false;">Tab1</a>' );
  }

  if( myTab2 !="" ){
    tabsHtml.push('<a id="deytero-tab" href="javascript:void(0);"   onclick="javascript:selectTab(&quot;sourceID&quot;,&quot;deytero-tab&quot;,&quot;'+ myTab2+'&quot;);return false;">'+ myTab2+ '</a>' );
  }

  if( myTab3 !="" ){
    tabsHtml.push('<a id="trito-tab" href="javascript:void(0);"   onclick="javascript:selectTab(&quot;sourceIDebdanahmera&quot;,&quot;trito-tab&quot;,&quot;'+ myTab3+'&quot;);return false;">'+ myTab3+ '</a>' );
  }


    document.getElementById("myTabs").innerHTML = tabsHtml.join('');
}



 gadgets.util.registerOnLoadHandler(init);  

