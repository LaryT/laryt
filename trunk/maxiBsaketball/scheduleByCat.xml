           sendQueryMaxiCategories();
        }else{
         alert('No source file for  Categories');
        }
      }
      
      function sendQueryMaxiCategories(){
          if( mCategory!="" ){
            var strQ='select A,C,E,G,H,I,J,K,L,M,N,O,P,Q,R,S,T,U,V,AW,AX where A="'+mCategory +'" order by I,J,V';
