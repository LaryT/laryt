  return strReturn;
}


var anakatepsePinaka = function(array){
        for(var i=array.length-1; i>0; i--){
                var j = Math.floor(Math.random() * (i+1));
                var temp = array[i];
                array[i] = array[j];
                array[j] = temp;
        }
        return array;
}

var kaneKartes = function (ypodoxeas, theTPL){
        pinakas = anakatepsePinaka(pinakas);
