      directionsDisplay.setPanel(document.getElementById('directions-panel'));
      //----  loadKmlLayer(srcKml,map);
  //--- diadikasia diabasmatos proorismvn 
  myInitCategories();
//---  
var weatherLayer = new google.maps.weather.WeatherLayer({
